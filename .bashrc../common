export LANG="en_US.UTF-8"
export PERL_BADLANG="0"
export EDITOR=vim
export PAGER=less

path-prepend ./bin

umask 022

if [ -n "$TTY" ]; then
    stty -ixon # get rid of ^S and ^Q
fi
ulimit -c unlimited # 'core' files
d=`which dircolors` && [ -x "$d" ] && eval `dircolors`

alias profile='source ~/.bashrc'

export HISTIGNORE="&:[bf]g:exit"

### Aliases ###
alias ll='ls -l'
alias la='ls -la'
alias RM='rm -rf'
alias perlsw='perl -Mstrict -Mwarnings'
alias perldd='perl -MData::Dumper'
alias perlxxx='perl -MXXX'
alias GETf='GET -UseS'
alias POSTf='POST -UseS'
alias HEADf='HEAD -UseS'
alias i=clear
alias scpresume="rsync --partial --progress --rsh=ssh"
alias v='vim'
alias vi='vim'
alias im='vim'
alias :e='vim'

alias ..='cd ..'
alias ..1='cd ..'
alias ..2='cd ../..'
alias ..3='cd ../../..'
alias ..4='cd ../../../..'
alias ..5='cd ../../../../..'
alias ..6='cd ../../../../../..'
alias ..6='cd ../../../../../../..'
alias ..7='cd ../../../../../../../..'
alias ..8='cd ../../../../../../../../..'
alias ..9='cd ../../../../../../../../../..'

# Shortcuts
alias screen='TERM=screen screen'
function ftf {
    if test -n "$1"; then
        path=$1
    else
        path='.'
    fi
    find $path -type f | grep -v '\/\.git\/'
}
alias ftfx='find . -type f | grep -v "\/\.git\/" | xargs'
alias +w='chmod +w'
alias +x='chmod +x'

abs_path()  { perl -MCwd -le "print Cwd::abs_path(shift)" $1; }
kiss()      { command kiss "$@"; exec $SHELL; }

alias vv='vim .vimrc'
alias VV='vim ~/.vimrc'
alias dict='/usr/bin/dict -dall'
alias viml='vim !! -l'

# Perl module stuff
alias pmf='perl Makefile.PL < /dev/null'
alias mt='make test'
alias mp='make purge'
alias mi='make install'
alias smi='sudo make install'
alias pfunk='perl -MConfig -MYAML -e "print Dump \%Config" | vim -'

if [ "$TERM" = "screen" ]; then
  swtcwd () {
    local HPWD="$PWD"
    case $HPWD in
      $HOME) HPWD="~";;
      $HOME/*) HPWD=`echo $PWD | perl -pe 's!.*/!!'`;;
    esac
    printf '\ek%s\e\\' "$HPWD"
  }
  PROMPT_COMMAND="swtcwd; $PROMPT_COMMAND"
fi
